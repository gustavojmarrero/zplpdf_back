# ============================================
# CONFIGURACIÓN DEL ENTORNO
# ============================================
NODE_ENV=development
PORT=8080

# ============================================
# GOOGLE CLOUD PLATFORM (proyecto de Cloud Run)
# ============================================
GCP_PROJECT_ID=intranet-guatever
GCP_LOCATION=us-central1
GCP_QUEUE_NAME=zpl-conversion-queue
GCP_SERVICE_ACCOUNT_EMAIL=zplpdf-service@intranet-guatever.iam.gserviceaccount.com
GCP_STORAGE_BUCKET=zplpdf-app-files
SERVICE_URL=https://zplpdf-service-url.a.run.app

# Credenciales GCP para Storage y Cloud Tasks
# - DESARROLLO LOCAL: Requerido (JSON completo del service account de GCP)
# - CLOUD RUN: NO necesario (usa ADC automático del Service Account)
GOOGLE_CREDENTIALS=

# ============================================
# FIREBASE (proyecto de Firebase)
# ============================================

# Firebase Admin SDK (autenticación de usuarios)
FIREBASE_PROJECT_ID=zplpdf-guatever
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@zplpdf-guatever.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Firestore (base de datos)
# Debe ser el JSON completo del service account de Firebase
FIREBASE_CREDENTIALS=

# ============================================
# STRIPE (pagos)
# ============================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRO_PRICE_ID=price_xxx

# ============================================
# SEGURIDAD
# ============================================
CRON_SECRET_KEY=your-random-secure-string
